}
.case_item_text_title_main{
  width: 100%;
  margin-top: 20rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
}
.case_item_text_title_style{
  margin-left: 20rpx;
  font-size: 35rpx;
  font-family:"", Times, serif;
  color: #333333
}
.case_item_text_info_main{
  width: 100%;
  height: 35rpx;
  display: flex;
  align-items: center;
}
.case_item_text_info_style1{
  margin-left: 20rpx;
  font-size: 25rpx;
  font-family:"", Times, serif;
