/********顶部选择栏********/
.good_details_recommand_title_main{
  width: 100%;
  height: 80rpx;
  display: flex;
  position: fixed;
  top: -1rpx;
  z-index: 999;
  background-color: #ececec
}
.good_details_recommand_title_details{
  width: 50%;
  height: 80rpx;
  text-align: center;
}
.good_details_recommand_title_recommand{
  width: 50%;
  height: 80rpx;
  text-align: center;
}
.good_details_recommand_title_unchecked_style{
   font-size: 35rpx;
   height: 80rpx;
   width: 100%;
   font-family:"", Times, serif;
   line-height: 80rpx;
   vertical-align: middle;
   color:#22393c;
   border-bottom-style:solid;
   border-color: #ebebeb;
   border-width: 3rpx;
}
.good_details_recommand_title_checked_style{
   font-size: 35rpx;
   height: 80rpx;
   width: 100%;
   font-family:"", Times, serif;
   line-height: 80rpx;
   vertical-align: middle;
   color:#22393c;
   border-bottom-style:solid;
   border-color: #22393c;
   border-width: 3rpx;
}
/***********商品列表***********/
.main{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 100rpx;
}
.good_mian_left{
  width: 356rpx;
  margin-top: 10rpx;
  margin-left: 15rpx;
  background-color: white;
}

.image{
  width: 100%;
  height: 267rpx;
}
.name_text{
  margin-top: 10rpx;
  display: flex;
  word-break:  break-all;  /**文本自动换行**/
}
.name_text_style{
  padding-left: 20rpx;
  padding-right: 20rpx;
   font-size: 25rpx;
   font-family:"", Times, serif;
   color: #333333
}
.old_price{
  margin-top: 10rpx;
  display: flex;
  direction: row;
}
.old_price_style{
  padding-left: 20rpx;
   font-size: 30rpx;
   font-family:"", Times, serif;
   color: #22393c;
}
.new_price{
  margin-top: 10rpx;
  display: flex;
  direction: row;
}
.new_price_style{
  padding-left: 20rpx;
   font-size: 35rpx;
   font-family:"", Times, serif;
   color: #22393c;
}
/************家装案例************/
.case_item_main{
  width: 97%;
  height: 540rpx;
  margin-left: auto;
  margin-right: auto;
  background-color: #ffffff
}
.case_item_image_main{
  width: 100%;
  height: 400rpx;
  display: flex;
  z-index: 4
}
.case_item_image_size{
  width: 100%;
  height: 400rpx;
}
