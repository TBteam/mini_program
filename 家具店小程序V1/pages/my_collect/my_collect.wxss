}
.case_item_text_info_style2{
  font-size: 25rpx;
  font-family:"", Times, serif;
  color: #aeaeae
}
.case_item_text_info_style3{
  font-size: 25rpx;
  font-family:"", Times, serif;
  color: #666666
}
.case_item_brand_image_main{
  width: 110rpx;
  height: 110rpx;
  margin-top: -65rpx;
  margin-left: auto;
  margin-right: auto;
  border-top-style:solid;
  border-right-style:solid;
  border-bottom-style:solid;
  border-left-style:solid;
  border-width: 1rpx;
  border-color: white;
  background-color: white;
  border-radius: 25%;
