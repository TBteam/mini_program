  align-items: center;
  z-index: 5;
}
.case_item_brand_image_size{
  width: 110rpx;
  height: 110rpx;
  border-radius: 25%;
  margin-left: auto;
  margin-right: auto;
}
.case_item_brand_name_main{
  width: 100%;
  height: 45rpx;
